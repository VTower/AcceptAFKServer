<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AcceptAFKServer.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AcceptAFKServer.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <!--  Context Row Definitions  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" MinHeight="164" />
            <RowDefinition Height="*" MinHeight="16" MaxHeight="50" />
        </Grid.RowDefinitions>
        <!--  Context Column Definitions  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--  Área Dinâmica de Conteúdo  -->
        <Frame x:Name="ContentFrame" Grid.Row="0" />

        <!--<Button
                HorizontalAlignment="Center"
                Click="NavigateBarButton"
                Content="Config" />-->

        <!--  Conteudo do Menu Inferior  -->
            <!--Background="Red"-->
        <Grid Grid.Row="1"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              MinWidth="164">
            <!--<Ellipse Width="164"
                         Height="164"
                         Fill="Transparent"
                         Stroke="#DA6014"
                         StrokeThickness="5" />-->
            <!--<Border Height="160"
                        Width="160"
                        BorderBrush="Blue"
                        BorderThickness="5"
                        CornerRadius="80" />-->
            <Border Height="150"
                    Width="150"
                    CornerRadius="75"
                    BorderBrush="#DA6014"
                    BorderThickness="3">
                <FlipView x:Name="MyFlipView"
                          Height="150"
                          MaxWidth="200"
                          SelectionChanged="MyFlipView_SelectionChanged"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center">
                    <FlipView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </FlipView.ItemsPanel>
                </FlipView>
            </Border>
        </Grid>

    </Grid>
</Page>
